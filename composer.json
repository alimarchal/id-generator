{
    "name": "alimarchal/id-generator",
    "description": "A Laravel package to generate unique, prefixed IDs with database transaction safety",
    "type": "laravel-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Marchal",
            "email": "kh.marchal@gmail.com"
        } 
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "orchestra/pest-plugin-testbench": "^2.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Alimarchal\\IdGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alimarchal\\IdGenerator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alimarchal\\IdGenerator\\IdGeneratorServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}